<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CityWeatherFragment"
    android:background="@mipmap/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cityWeatherFragment_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="29"
                android:textSize="70dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@id/cityWeatherFragment_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京"
                style="@style/cityWeatherFragmentStyle"
                android:layout_below="@+id/cityWeatherFragment_temp"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/cityWeatherFragment_condition"
                android:layout_below="@+id/cityWeatherFragment_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晴"
                style="@style/cityWeatherFragmentStyle"/>
            <TextView
                android:id="@+id/cityWeatherFragment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/cityWeatherFragmentStyle"
                android:text="2021-3-23"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/cityWeatherFragment_condition"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_marginLeft="140dp"
                android:id="@+id/cityWeatherFragment_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/cityWeatherFragmentStyle"
                android:text="东北风"
                android:layout_below="@+id/cityWeatherFragment_date"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/cityWeatherFragmentStyle"
                android:text=" "
                android:background="@drawable/frag_bg"
                android:layout_marginLeft="2dp"
                android:layout_below="@+id/cityWeatherFragment_date"
                android:layout_toRightOf="@+id/cityWeatherFragment_wind"/>
            <TextView
                android:id="@+id/cityWeatherFragment_air"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/cityWeatherFragmentStyle"
                android:text="优"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/cityWeatherFragment_wind"
                android:layout_below="@+id/cityWeatherFragment_date"/>
        </RelativeLayout>

        <LinearLayout
    android:id="@+id/cityWeatherFragment_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/frag_bg"
            android:layout_marginTop="15dp">
</LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frag_bg"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cityWeatherFragment_ray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="紫外线指数"
                style="@style/MainActivity_linear_text"/>
            <TextView
                android:id="@+id/cityWeatherFragment_fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="减肥指数"
                style="@style/MainActivity_linear_text"/>
            <TextView
                android:id="@+id/cityWeatherFragment_sugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="血糖指数"
                style="@style/MainActivity_linear_text"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cityWeatherFragment_cloth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  穿衣指数  "
                    style="@style/MainActivity_linear_text"/>
                <TextView
                    android:id="@+id/cityWeatherFragment_carWash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="洗车指数"
                    style="@style/MainActivity_linear_text"/>
                <TextView
                    android:id="@+id/cityWeatherFragment_airIndex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空气指数"
                    style="@style/MainActivity_linear_text"/>
            </LinearLayout>


    </LinearLayout>





    </LinearLayout>
</ScrollView>